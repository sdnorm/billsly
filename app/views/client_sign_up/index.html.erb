<div class="bg-white pb-16 pt-8 px-4 overflow-hidden sm:px-6 lg:px-8 lg:py-24">
  <div class="relative max-w-xl mx-auto">
    <svg class="absolute left-full transform translate-x-1/2" width="404" height="404" fill="none" viewBox="0 0 404 404">
      <defs>
        <pattern id="85737c0e-0916-41d7-917f-596dc7edfa27" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
          <rect class="text-gray-200" x="0" y="0" width="4" height="4" fill="currentColor"></rect>
        </pattern>
      </defs>
      <rect width="404" height="404" fill="url(#85737c0e-0916-41d7-917f-596dc7edfa27)"></rect>
    </svg>
    <svg class="absolute right-full bottom-0 transform -translate-x-1/2" width="404" height="404" fill="none" viewBox="0 0 404 404">
      <defs>
        <pattern id="85737c0e-0916-41d7-917f-596dc7edfa27" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
          <rect class="text-gray-200" x="0" y="0" width="4" height="4" fill="currentColor"></rect>
        </pattern>
      </defs>
      <rect width="404" height="404" fill="url(#85737c0e-0916-41d7-917f-596dc7edfa27)"></rect>
    </svg>
    <div class="text-center">
      <h2 class="text-3xl leading-9 font-extrabold tracking-tight text-gray-900 sm:text-4xl sm:leading-10">New Client Sign Up</h2>
      <p class="mt-4 text-xl leading-6 text-gray-500">Welcome to Billsly!</p>
      <p class="mt-4 text-lg leading-6 text-gray-500">
        Fill out the information below so <br><strong><%= @account.name %></strong><br>can easily follow up with you.
      </p>
    </div>
    <div class="mt-12">
      <%= form_with model: @client, url: client_sign_up_create_path(@account.id) do |form| %>
        <% if form.object.errors.any? %>
          <div class="flex items-start justify-center">
            <div class="alert alert-error mb-6" role="alert">
              <div class="flex items-start justify-cetner">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" class="fill-current icon mr-4 mt-1 flex-no-shrink" role="img" aria-labelledby="f1yx75u7nv0lvn6ck4z10w7lksjmk2f"><title id="f1yx75u7nv0lvn6ck4z10w7lksjmk2f">Icons/close outline</title><path d="M2.93 17.07A10 10 0 1 1 17.07 2.93 10 10 0 0 1 2.93 17.07zm1.41-1.41A8 8 0 1 0 15.66 4.34 8 8 0 0 0 4.34 15.66zm9.9-8.49L11.41 10l2.83 2.83-1.41 1.41L10 11.41l-2.83 2.83-1.41-1.41L8.59 10 5.76 7.17l1.41-1.41L10 8.59l2.83-2.83 1.41 1.41z"></path></svg>
                <div>
                  <h4 class="font-black text-sm uppercase tracking">
                    <%= I18n.t("errors.messages.not_saved", count: form.object.errors.count, resource: form.object.class.model_name.human.downcase) %>
                  </h4>
                  <ul>
                    <% form.object.errors.full_messages.each do |message| %>
                      <li><%= message %>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <div class="grid grid-cols-1 gap-y-6">
          <div class="grid grid-cols-6 gap-6">
            <div class="col-span-6 sm:col-span-3">
              <%= form.label :first_name, class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_field :first_name, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <%= form.label :last_name, class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_field :last_name, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_field :email, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <%= form.label :phone_number, class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_field :phone_number, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
            </div>
            <%= form.fields_for :client_profiles do |cp| %>
              <div class="col-span-6 sm:col-span-3">
                <%= cp.label "Address 1", class: "block text-sm font-medium text-gray-700" %>
                <%= cp.text_field :address1, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
              </div>
              <div class="col-span-6 sm:col-span-3">
                <%= cp.label "Address 2", class: "block text-sm font-medium text-gray-700" %>
                <%= cp.text_field :address2, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
              </div>
              <div class="col-span-6 sm:col-span-6 lg:col-span-2">
                <%= cp.label :city, class: "block text-sm font-medium text-gray-700" %>
                <%= cp.text_field :city, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
              </div>
              <div class="col-span-6 sm:col-span-3 lg:col-span-2">
                <%= cp.label :state, class: "block text-sm font-medium text-gray-700" %>
                <%= cp.text_field :state, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
              </div>
              <div class="col-span-6 sm:col-span-3 lg:col-span-2">
                <%= cp.label :zip_code, class: "block text-sm font-medium text-gray-700" %>
                <%= cp.text_field :zip_code, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
              </div>
            <% end %>
          </div>
          <div class="sm:col-span-2">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <%= form.check_box :terms_and_conditions, id: "tos", class: "form-checkbox mr-1", checked: true %>
              </div>
              <div class="ml-3">
                <p class="text-base leading-6 text-gray-500">
                  By selecting this, you agree to the
                  <%= link_to("Privacy Policy", privacy_path, target: "_blank", class: "font-medium text-gray-700 underline") %> and 
                  <%= link_to("Terms of Service", terms_path, target: "_blank", class: "font-medium text-gray-700 underline") %>.
                </p>
              </div>
            </div>
          </div>
          <div class="sm:col-span-2">
            <span class="w-full inline-flex rounded-md shadow-sm">
              <%= form.submit "Save", class: "w-full inline-flex items-center justify-center px-6 py-3 border border-transparent text-base leading-6 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition ease-in-out duration-150" %>
            </span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
