<div class="relative bg-gray-900 overflow-hidden">
  <div class="max-w-screen-xl">
    <div data-controller="dropdown" class="lg:max-w-2xl lg:w-full bg-gray-900">
      <div class="relative pt-2 px-4 sm:px-6 lg:px-8">
        <nav class="relative flex items-center justify-between sm:h-10 lg:justify-start mt-0 md:mt-4">
          <div class="flex items-center flex-grow flex-shrink-0 lg:flex-grow-0">
            <div class="flex items-center justify-between w-full md:w-auto">
              <%= link_to root_path, class: "" do %>
                <%= image_tag("Billsly-white.png", class: "h-6 w-auto sm:h-12") %>
              <% end %>
              <div data-action="click->dropdown#toggle click@window->dropdown#hide" role="button" data-dropdown-target="button" class="-mr-2 flex items-center md:hidden">
                <button class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:bg-gray-100 focus:text-gray-500 transition duration-150 ease-in-out" id="main-menu" type="button" aria-label="Main menu" aria-haspopup="true">
                  <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                  </svg>
                </button>
              </div>
            </div>
          </div>
          <div class="hidden md:block md:ml-10 md:pr-4">
            <%= link_to "Features", features_path, class: "font-medium text-gray-500 hover:text-white transition duration-150 ease-in-out" %>
            <%= link_to "Pricing", pricing_path, class: "ml-8 font-medium text-gray-500 hover:text-white transition duration-150 ease-in-out" %>
            <%= link_to t(".log_in"), new_user_session_path, class: 'ml-8 font-medium text-white over:text-indigo-900 transition duration-150 ease-in-out' %>
          </div>
        </nav>
      </div>
      <div data-dropdown-target="menu" class="hidden absolute top-0 inset-x-0 p-2 transition transform origin-top-right">
        <div class="rounded-lg shadow-md">
          <div class="rounded-lg bg-white shadow-xs overflow-hidden" role="menu" aria-orientation="vertical" aria-labelledby="main-menu">
            <div class="px-5 pt-4 flex items-center justify-between">
              <div>
                <%= image_tag("indigo-billsly-underline.png", class: "h-6 w-auto sm:h-12") %>
              </div>
              <div data-action="click->dropdown#toggle click@window->dropdown#hide" role="button" data-dropdown-target="button" class="-mr-2">
                <button class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:bg-gray-100 focus:text-gray-500 transition duration-150 ease-in-out" type="button" aria-label="Close menu">
                  <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                  </svg>
                </button>
              </div>
            </div>
            <div class="px-2 pt-2 pb-3">
              <%= link_to "Features", features_path, class: "block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50 focus:outline-none focus:text-gray-900 focus:bg-gray-50 transition duration-150 ease-in-out", role: "menuitem" %>
              <%= link_to "Pricing", pricing_path, class: "mt-1 block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50 focus:outline-none focus:text-gray-900 focus:bg-gray-50 transition duration-150 ease-in-out", role: "menuitem" %>
            </div>
            <div>
              <%= link_to t(".log_in"), new_user_session_path, class: 'block w-full px-5 py-3 text-center font-medium text-indigo-600 bg-gray-50 hover:bg-gray-100 hover:text-indigo-700 focus:outline-none focus:bg-gray-100 focus:text-indigo-700 transition duration-150 ease-in-out', role: "menuitem" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="pt-12 px-4 sm:px-6 lg:px-8 lg:pt-16">
    <div class="text-center">
      <h2 class="text-lg leading-6 font-semibold text-gray-300 uppercase tracking-wider">As a business owner</h2>
      <p class="mt- text-3xl leading-9 font-extrabold text-white sm:text-4xl sm:leading-10 lg:text-5xl lg:leading-none">We know your time is valuable.</p>
      <p class="mt-3 max-w-4xl mx-auto text-xl leading-7 text-gray-300 sm:mt-5 sm:text-2xl sm:leading-8">
        Get your time back and get paid faster.
      </p>
    </div>
  </div>
  <div data-controller="pricing">
    <div class="flex flex-wrap items-center justify-center">
      <div data-pricing-target="toggle" class="inline-block rounded-full bg-tertiary-500 py-2 px-1 text-white my-8">
        <a data-action="click->pricing#switch" data-pricing-target="frequency" data-frequency="monthly" class="cursor-pointer py-2 px-4 rounded-full">
          <%= t(".monthly") %>
        </a>
        <a data-action="click->pricing#switch" data-pricing-target="frequency" data-frequency="yearly" class="cursor-pointer py-2 px-4 rounded-full">
          <%= t(".yearly") %>
        </a>
      </div>
    </div>
      
    <div class="flex flex-wrap items-center justify-center">
      <div class="lg:mt-16 bg-white pb-12 lg:mt-10 lg:pb-16 md:bg-gray-900 lg:bg-white">
        <div class="relative z-0">
          <div class="absolute inset-0 h-5/6 bg-gray-900 lg:h-2/3 md:h-full"></div>
          <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8">
            <div data-pricing-target="plans" data-frequency="monthly">
              <div class="relative lg:grid lg:grid-cols-12">
                <% Plan.visible.monthly.sorted.each do |plan| %>
                  <%= render layout: "subscriptions/plan", locals: { plan: plan } do %>
                    <% if plan.name == "Professional" || plan.name == "Premium" %>
                      <%= link_to t(".get_started"), new_subscription_path(plan: plan.id), class: "block w-full text-center rounded-lg border border-transparent bg-indigo-600 px-6 py-4 text-xl leading-6 font-medium text-white hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo transition ease-in-out duration-150" %>
                    <% else %>
                      <%= link_to t(".get_started"), new_subscription_path(plan: plan.id), class: "block w-full text-center rounded-lg border border-transparent bg-white px-6 py-3 text-base leading-6 font-medium text-indigo-600 hover:text-indigo-500 focus:outline-none focus:shadow-outline transition ease-in-out duration-150" %>
                    <% end %>
                  <% end %>
                <% end %>
              </div>
            </div>
            <div data-pricing-target="plans" data-frequency="yearly" class="hidden">
              <div class="relative lg:grid lg:grid-cols-12">
                <% Plan.visible.yearly.sorted.each do |plan| %>
                  <%= render layout: "subscriptions/plan", locals: { plan: plan } do %>
                    <% if plan.name == "Professional" || plan.name == "Premium" %>
                      <%= link_to t(".get_started"), new_subscription_path(plan: plan.id), class: "block w-full text-center rounded-lg border border-transparent bg-indigo-600 px-6 py-4 text-xl leading-6 font-medium text-white hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo transition ease-in-out duration-150" %>
                    <% else %>
                      <%= link_to t(".get_started"), new_subscription_path(plan: plan.id), class: "block w-full text-center rounded-lg border border-transparent bg-white px-6 py-3 text-base leading-6 font-medium text-indigo-600 hover:text-indigo-500 focus:outline-none focus:shadow-outline transition ease-in-out duration-150" %>
                    <% end %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

