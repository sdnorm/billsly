<div class="fixed inset-x-0 bottom-0">
  <div data-controller="alert" class="bg-blue-500">
    <div class="max-w-7xl mx-auto py-3 px-3 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between flex-wrap">
        <div class="md:w-0 flex-1 flex items-center">
          <span class="flex p-2 rounded-lg bg-blue-700">
            <!-- Heroicon name: outline/speakerphone -->
            <svg class="h-5 w-5 text-blue-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
            </svg>
          </span>
          <p class="ml-3 font-medium text-white">
            By using this site you are consenting to our use of cookies. We only use them to make your experience better. We don't sell your data.
          </p>
        </div>
        <div class="order-3 mt-2 flex-shrink-0 w-full sm:order-2 sm:mt-0 sm:w-auto">
          <%= form_with(url: set_cookie_consent_path, local: false) do |form| %>
            <%= form.submit "Close", data: { action: "alert#close", disable_with: "Closing..." }, class: "btn bg-blue-700 text-white hover:bg-blue-900" %>
          <% end %>
        </div>
        <%= cookies[:cookie_consent] %>
      </div>
    </div>
  </div>
</div>