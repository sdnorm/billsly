<div class="container mx-auto my-8 px-4">
  <div class="max-w-3xl mx-auto">
    <div class="flex justify-between items-center mb-4">
      <h1 class="h3"><%= link_to "Clients", clients_path %> > Client #<%= @client.id %></h1>
      <%= link_to t("edit"), edit_client_path(@client), class: "btn btn-link" %>
    </div>

    <div class="bg-white rounded shadow p-8">
      <div class="mb-4">
        <h5>First name</h5>
        <%= @client.first_name %>
      </div>
      <div class="mb-4">
        <h5>Last name</h5>
        <%= @client.last_name %>
      </div>
      <div class="mb-4">
        <h5>Email</h5>
        <%= @client.email %>
      </div>
      <div class="mb-4">
        <h5>Phone number</h5>
        <%= @client.phone_number %>
      </div>
      <div class="mb-4">
        <h4>Client Profile</h4>
        <% if @client.client_profiles.nil? %>
          <h3>no profile</h3>
        <% else %>
          <div><strong>reminder:</strong> <%= @client.client_profiles.first.reminder_message %></div>
          <div><strong>payment options:</strong><%= @client.client_profiles.first.payment_options %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>


