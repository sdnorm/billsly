<div class="container mx-auto mb-8 mt-4 sm:px-2 md:px-4">
  <div class="hidden md:flex justify-between items-center mb-4">
    <h1 class="h3">Clients</h1>
    <div class="hidden md:flex items-center justify-end md:flex-1 lg:w-0 px-1">
      <%= form_with url: clients_path, method: :get do |form| %>
        <div class="relative flex items-stretch flex-grow focus-within:z-10 mr-2">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <!-- Heroicon name: solid/users -->
            <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
            </svg>
          </div>
          <input type="text" name="query" id="query" class="focus:ring-indigo-500 focus:border-indigo-500 block w-full rounded-none rounded-l-md pl-10 sm:text-sm border-gray-300" placeholder="Search clients">
          <button class="-ml-px relative inline-flex items-center space-x-2 px-4 py-2 border border-gray-300 text-sm font-medium rounded-r-md text-gray-700 bg-gray-200 hover:bg-gray-300 focus:outline-none focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500">
            <!-- Heroicon name: solid/sort-ascending -->
            <%= render_svg "icons/search", styles: "fill-current text-color-black icon-sm", title: "search" %>
          </button>
        </div>
      <% end %>
      <%= link_to new_client_path, class: "btn btn-gray" do %>
        <span class="mr-1"><i class="fas fa-plus"></i></span>
        Client
      <% end %>
    </div>
    <div class="md:hidden">
      <%= link_to t("shared.scaffold.new.title", model: "Client"), new_client_path, class: "btn btn-primary" %>
    </div>
  </div>

  <div class="md:hidden max-w-md mx-auto">
    <div class="flex justify-around items-center mb-4 px-2">
      <%= form_with url: clients_path, method: :get do |form| %>
        <div class="flex rounded-md shadow-sm" style="margin-right: 3px;">
          <div class="relative flex items-stretch flex-grow focus-within:z-10">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <!-- Heroicon name: solid/users -->
              <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
              </svg>
            </div>
            <input type="text" name="query" id="query" class="focus:ring-indigo-500 focus:border-indigo-500 block w-full rounded-none rounded-l-md pl-10 sm:text-sm border-gray-300" placeholder="Search clients">
          </div>
          <button class="-ml-px relative inline-flex items-center space-x-2 px-4 py-2 border border-gray-300 text-sm font-medium rounded-r-md text-gray-700 bg-gray-200 hover:bg-gray-300 focus:outline-none focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500">
            <!-- Heroicon name: solid/sort-ascending -->
            <%= render_svg "icons/search", styles: "fill-current text-color-black icon-sm", title: "search" %>
          </button>
        </div>
      <% end %>
      <%= link_to new_client_path, class: "btn btn-gray-sm" do %>
        <span class="mr-1"><i class="fas fa-plus"></i></span>
        Client
      <% end %>
    </div>
  </div>

  <% if @clients.any? %>
    <div class="flex flex-col">
      <div class="my-2 overflow-x-auto">
        <div class="align-middle inline-block min-w-full shadow overflow-hidden sm:rounded-lg border-b border-gray-200">
          <table class="min-w-full">
            <thead>
              <tr>
                <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                  <%= sortable @clients, :last_name, "Name", class: "text-gray-700" %>
                </th>
                <th class="hide-on-table-mobile px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                  Email
                </th>
                <th class="hide-on-table-mobile px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                  Address
                </th>
                <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                  <div class="flex justify-end">Action</div>
                </th>
              </tr>
            </thead>
            <tbody class="bg-white">
              <% @clients.each do |client| %>
                <tr class="hover:bg-gray-100">
                  <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                    <div class="flex items-center">
                      <%= link_to client_path(client) do %>
                        <div class="text-sm leading-5 font-medium text-gray-900"><%= client.full_name %> 
                          <span class="text-sm leading-5 text-gray-500">(<%= number_to_currency(client.client_profiles.first.dollar_amount) unless client.client_profiles.first.dollar_amount.nil? %>)</span>
                        </div>
                      <% end %>
                    </div>
                  </td>
                  <td class="hide-on-table-mobile px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                    <div class="flex items-center">
                      <div class="text-sm leading-5 text-gray-500"><%= client.email %></div>
                    </div>
                  </td>
                  <td class="hide-on-table-mobile px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                    <div class="flex items-center">
                      <div class="text-sm leading-5 text-gray-500"><%= client.full_street_address.rstrip unless client.full_street_address.nil? %></div>
                      <div class="text-sm leading-5 text-gray-500"><%= client.city.rstrip unless client.city.nil? %>, <%= client.state %> <%= client.zip_code %></div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                    <div class="flex justify-end items-center">
                      <%= form_for CompletedService.new, url: completed_service_from_dash_path do |form| %>
                        <%= form.hidden_field :account_id, value: current_account.id %>
                        <%= form.hidden_field :client_profile_id, value: client.client_profiles.first.id %>
                        <%= form.submit "Complete", class: "inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs font-medium rounded shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 hover:text-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <% if @pagy.pages > 1 %>
      <div class="text-center my-6">
        <%== pagy_nav(@pagy) %>
      </div>
    <% end %>

  <% else %>
    <table class="min-w-full">
      <thead>
        <tr>
          <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
            <%= sortable @clients, :last_name, "Name", class: "text-gray-700" %>
          </th>
          <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
            Action
          </th>
        </tr>
      </thead>
      <tbody class="bg-white">
        <tr class="hover:bg-gray-100" data-controller="tooltip" data-tippy-content="This is an example client. The reminder will be sent to your email." data-tippy-delay="0" data-tippy-arrow="true" data-tippy-size="regular" data-tippy-animation="fade">
          <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
            <div class="flex items-center">
              <div class="ml-4">
                <div class="text-sm leading-5 font-medium text-gray-900"><%= current_user.name %></div>
                <div class="text-sm leading-5 text-gray-500"><%= current_user.email %></div>
              </div>
            </div>
          </td>
          <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
            <button type="button" class="inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs font-medium rounded shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
              Send Reminder
            </button>
            <div class="text-xs leading-5 text-gray-500">
              Date of last send reminder goes here
            </div>
          </td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>
