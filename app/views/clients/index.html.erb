<div class="container mx-auto mb-8 mt-4 sm:px-2 md:px-4">
  <div class="flex justify-between items-center mb-4">
    <h1 class="h3">Clients</h1>
    <div class="hidden md:flex items-center justify-end md:flex-1 lg:w-0 px-1">
      <%= form_with url: clients_path, method: :get do |form| %>
        <div class="relative flex items-stretch flex-grow focus-within:z-10 mr-2">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <!-- Heroicon name: solid/users -->
            <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
            </svg>
          </div>
          <input type="text" name="query" id="query" class="focus:ring-indigo-500 focus:border-indigo-500 block w-full rounded-none rounded-l-md pl-10 sm:text-sm border-gray-300" placeholder="Search clients">
          <button class="-ml-px relative inline-flex items-center space-x-2 px-4 py-2 border border-gray-300 text-sm font-medium rounded-r-md text-gray-700 bg-gray-200 hover:bg-gray-300 focus:outline-none focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500">
            <!-- Heroicon name: solid/sort-ascending -->
            <%= render_svg "icons/search", styles: "fill-current text-color-black icon-sm", title: "search" %>
          </button>
        </div>
      <% end %>
      <% if @clients.any? %>
        <%= link_to t("shared.scaffold.new.title", model: "Client"), new_client_path, class: "btn btn-primary" %>
      <% end %>
    </div>
    <div class="md:hidden">
      <% if @clients.any? %>
        <%= link_to t("shared.scaffold.new.title", model: "Client"), new_client_path, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

  <div class="md:hidden max-w-md mx-auto">
    <div class="flex justify-around items-center mb-4">
      <div class="mt-1 flex rounded-md shadow-sm">
        <div class="relative flex items-stretch flex-grow focus-within:z-10">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <!-- Heroicon name: solid/users -->
            <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
            </svg>
          </div>
          <input type="text" name="query" id="query" class="focus:ring-indigo-500 focus:border-indigo-500 block w-full rounded-none rounded-l-md pl-10 sm:text-sm border-gray-300" placeholder="Search clients">
        </div>
        <button class="-ml-px relative inline-flex items-center space-x-2 px-4 py-2 border border-gray-300 text-sm font-medium rounded-r-md text-gray-700 bg-gray-200 hover:bg-gray-300 focus:outline-none focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500">
          <!-- Heroicon name: solid/sort-ascending -->
          <%= render_svg "icons/search", styles: "fill-current text-color-black icon-sm", title: "search" %>
        </button>
      </div>
    </div>
  </div>

  <% if @clients.any? %>
    <div class="flex flex-col">
      <div class="-my-2 py-2 overflow-x-auto sm:-mx-6 sm:px-6 lg:-mx-8 lg:px-8">
        <div class="align-middle inline-block min-w-full shadow overflow-hidden sm:rounded-lg border-b border-gray-200">
          <table class="min-w-full">
            <thead>
              <tr>
                <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                  <%= sortable @clients, :last_name, "Name", class: "text-gray-700" %>
                </th>
                <%
=begin%>
 <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                  Message
                </th> 
<%
=end%>
                <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                  Action
                </th>
              </tr>
            </thead>
            <tbody class="bg-white">
              <% @clients.each do |client| %>
                <tr class="hover:bg-gray-100">
                  <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                    <div class="flex items-center">
                      <div class="ml-4">
                        <%= link_to client_path(client) do %>
                          <div class="text-sm leading-5 font-medium text-gray-900"><%= client.full_name %></div>
                          <div class="text-sm leading-5 text-gray-500"><%= client.email %></div>
                        <% end %>
                      </div>
                    </div>
                  </td>
                  <%
=begin%>
 <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                    <div data-controller="modal">
                      <button class="btn btn-small btn-secondary outline mr-2" data-action="click->modal#open">Edit</button>
                      <i><%= client.client_profiles.first.reminder_message.to_plain_text.truncate(25, separator: ' ') %></i>
                      <div data-modal-target="container" data-action="click->modal#closeBackground keyup@window->modal#closeWithKeyboard" class="hidden animated fadeIn fixed inset-0 overflow-y-auto flex items-center justify-center" style="z-index: 9999;">
                        <div class="fixed top-0 left-0 w-full h-full relative">
                          <!-- Modal Card -->
                          <div class="w-screen h-screen bg-white">
                            <div class="flex flex-wrap justify-center items-center h-screen">
                              <div class="w-2/3 m-auto">
                                <%= form_with(model: client, url: message_index_update_path(client)) do |form| %>
                                  <div class="form-group">
                                    <%= form.fields_for :client_profiles do |cp| %>
                                      <%= cp.label :reminder_message %>
                                      <%= cp.rich_text_area :reminder_message, class: "form-control" %>
                                    <% end %>
                                  </div>
                                  <div class="form-group flex justify-between">
                                    <%= form.button class: "btn btn-primary" %>
                                  </div>
                                <% end %>

                                <div class="flex justify-end items-center flex-wrap mt-6">
                                  <button class="btn btn-primary" data-action="click->modal#close">Close</button>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                    
                    
                  </td> 
<%
=end%>
                  <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                    <%= link_to "Send Reminder", initial_reminder_path(client), class: "inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs font-medium rounded shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
                    <div class="text-xs leading-5 text-gray-500">
                      <% if client.last_reminder.nil? %>
                        No reminders sent yet.
                      <% else %>
                        Last sent <%= client.last_reminder.created_at.strftime("%a %b %e") %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <% if @pagy.pages > 1 %>
      <div class="text-center my-6">
        <%== pagy_nav(@pagy) %>
      </div>
    <% end %>

  <% else %>
    <table class="min-w-full">
      <thead>
        <tr>
          <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
            <%= sortable @clients, :last_name, "Name", class: "text-gray-700" %>
          </th>
          <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
            Action
          </th>
        </tr>
      </thead>
      <tbody class="bg-white">
        <tr class="hover:bg-gray-100">
          <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
            <div class="flex items-center">
              <input class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" id="remember_me" name="remember_me" type="checkbox">
              <div class="ml-4">
                <div class="text-sm leading-5 font-medium text-gray-900">Test Client</div>
                <div class="text-sm leading-5 text-gray-500">test@client.com</div>
              </div>
            </div>
          </td>
          <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
            <button type="button" class="inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs font-medium rounded shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
              Send Reminder
            </button>
            <div class="text-xs leading-5 text-gray-500">
              Last sent <%= Date.today.strftime("%a %b %e") %>
            </div>
          </td>
        </tr>
      </tbody>
    </table>
    <div class="bg-white rounded shadow flex flex-col items-center justify-between p-8 lg:flex-row">
      <%= image_tag "empty.svg", class: "mb-4 lg:w-1/2" %>
      <div class="flex-1 text-center">
        <p class="h3 mb-4">Create your first Client</p>
        <%= link_to t("shared.scaffold.new.title", model: "Client"), new_client_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
