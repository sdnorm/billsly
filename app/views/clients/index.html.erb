                        <%= form_for CompletedService.new, url: completed_service_from_dash_path do |form| %>
                          <%= form.hidden_field :account_id, value: current_account.id %>
                          <%= form.hidden_field :client_profile_id, value: client.client_profiles.first.id %>
                          <%= form.submit "Complete", class: "inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs font-medium rounded shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 hover:text-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
